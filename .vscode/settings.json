{
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.validate": [
    "mdx",
  ],
  "tailwindCSS.experimental.classRegex": [
    [
      "cva\\(([^)]*)\\)", 
      "[\"'`]([^\"'`]*).*?[\"'`]",
      "cx\\(([^)]*)\\)", 
      "(?:'|\"|`)([^']*)(?:'|\"|`)"
    ]
  ],
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on"
  },
  "css.lint.unknownAtRules": "ignore",
  "[mdx]": {
    "editor.wordWrap": "wordWrapColumn"
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  }
}